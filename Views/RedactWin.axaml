                        DockPanel.Dock="Top"
                        Text="Окно добавления">
                </TextBlock>
                <Image Source="/Assets/avalonia-logo.ico" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30 0 " Height="50" Width="50" DockPanel.Dock="Top"></Image >
        <StackPanel>
                <TextBox 
                        Name="newPlayerName">
                </TextBox>
                <TextBox 
                        Name="newWeight">
                </TextBox>
                <TextBox 
                        Name="newHeight">
                </TextBox>
                <DatePicker 
                        Name="BirthPicker">
                </DatePicker>
                <DatePicker 
                        Name="BeginPicker">
                </DatePicker>
                <ComboBox
                        Name="Pos"></ComboBox>
                <ComboBox
                        Name="Team"></ComboBox>
                <Button
                        Name="Save"
                        Content="Добав"
                        Click="Save_OnClick">
                        
                </Button>
                <Button
                        Name="Canc"
                        Content="отмена">
                </Button>
        </StackPanel>
                </DockPanel>
</Window>
